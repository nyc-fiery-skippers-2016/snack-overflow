<h3>Comments</h3>
<ul id="question-comment-list">
  <% @comments.each do |comment| %>
    <li><%= erb :"/comments/_comment_partial", layout: false, locals: {comment: comment} %></li>
<% end %>
</ul>

<% if logged_in? %>
  <a id="question-comment-link" href="/questions/<%= @question.id %>/comments/new">Add Comment</a>

  <div id="question-comment-form-holder">

  </div>
<% end %>