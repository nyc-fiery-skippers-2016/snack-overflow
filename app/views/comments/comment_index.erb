<h3>Comments</h3>
<ul id="answer-comment-list">

  <% answer.comments.each do |comment| %>
    <li><%= erb :"/comments/_comment_partial", layout: false, locals: {comment: comment} %></li>
<% end %>
</ul>

<% if logged_in? %>
  <a class="answer-comment-link" href="/answers/<%= answer.id %>/comments/new">Add Comment</a>

  <div class="answer-comment-form-holder">

  </div>
<% end %>
