<form class="form" id='up-vote' method="post" action='/questions/<%= question.id %>/_vote'>
  <input type="hidden" name="votable_type" value="question">
  <input type="hidden" name="votable_id" value="<%=question.id%>">
  <input type="image" name="up_image" source="/images/up_arrow" id='button-up'>
</form>

<%= question.votes.sum(:value) %>

<form class="form" id='down-vote' method="post" action='/questions/<%= question.id %>/_vote'>
  <input type="hidden" name="votable_type" value="question">
  <input type="hidden" name="votable_id" value="<%=question.id%>">
  <input type="image" name="down_image" source="/images/down_arrow" id='button-down'>
</form>



