<h3>New Question</h3>

<% if logged_in? %>
  <form class="form" action="/questions" method="Post">
    <input type="text" name="title" placeholder="Question Title"><br>
    <textarea type="text" rows="10" cols="50" name="body" placeholder="Question"></textarea><br>
    <input class="form-button" type="submit" value="Create Question">
  </form>
<% end %>
