<h1><text class="question_answer_title">Question:</text> <%= @question.title %></h1>

<div class="votes">
  <%= erb :_votes, layout: false, locals: {question: @question} %>
</div>

<p>
  <%= @question.body %><br>

  <% if logged_in? && current_user.id == @question.user_id %>
    <a href="/questions/<%= @question.id %>/edit">Edit Question</a>

    <form action="/questions/<%= @question.id %>" method="Post">
      <input type="hidden" name="_method" value="Delete">
      <input type="submit" value="Delete Question">
    </form>
  <% end %>
</p>


